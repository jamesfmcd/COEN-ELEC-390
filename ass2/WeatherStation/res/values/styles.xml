<resources>

    <color name="bg_top">#FF00A2D9</color>
    <color name="bg_bot">#FF92CEE8</color>
    <color name="box_bg">#66FFFFFF</color>
    <color name="box_line">#FFFFFFFF</color>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bg_container">
        <item name="android:background">@drawable/bg_sky</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="box_container"></style>

    <style name="switch_input"></style>

    <style name="switch_unit" parent="switch_input">
        <item name="android:layout_marginBottom">@dimen/box_vert_outer_spacing</item>
    </style>

    <style name="box_content">

        <!-- item name="android:gravity">center_horizontal</item -->
        <item name="android:layout_marginTop">@dimen/box_vert_inner_spacing</item>
        <item name="android:layout_marginBottom">@dimen/box_vert_outer_spacing</item>
        <item name="android:layout_marginLeft">@dimen/box_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/box_horizontal_spacing</item>
        <item name="android:background">@drawable/bg_box</item>
    </style>

    <style name="box_unit_switch" parent="box_content">
        <item name="android:paddingTop">@dimen/text_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_padding_bot</item>
        <item name="android:paddingLeft">@dimen/text_padding_outer</item>
        <item name="android:paddingRight">@dimen/text_padding_inner</item>
    </style>

    <style name="text_base">
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_data" parent="text_base">
        <item name="android:gravity">right|bottom</item>
        <item name="android:paddingTop">@dimen/text_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_padding_bot</item>
        <item name="android:paddingLeft">@dimen/text_padding_outer</item>
        <item name="android:paddingRight">@dimen/text_padding_inner</item>
    </style>

    <style name="text_unit" parent="text_base">
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">@dimen/text_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_padding_bot</item>
        <item name="android:paddingLeft">@dimen/text_padding_inner</item>
        <item name="android:paddingRight">@dimen/text_padding_outer</item>
    </style>

    <style name="text_header" parent="text_base">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/box_vert_outer_spacing</item>
        <item name="android:layout_marginBottom">@dimen/box_vert_inner_spacing</item>
        <item name="android:layout_marginLeft">@dimen/box_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/box_horizontal_spacing</item>
        <item name="android:background">@drawable/bg_box</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:paddingTop">@dimen/text_padding_top_header</item>
        <item name="android:paddingBottom">@dimen/text_padding_bottom_header</item>
        <item name="android:paddingLeft">@dimen/text_padding_horizontal_header</item>
        <item name="android:paddingRight">@dimen/text_padding_horizontal_header</item>
    </style>

    <style name="text_temp_data" parent="text_data">
        <item name="android:textSize">@dimen/text_temp_size</item>
    </style>

    <style name="text_humi_data" parent="text_data">
        <item name="android:textSize">@dimen/text_humi_size</item>
    </style>

    <style name="text_baro_data" parent="text_data">
        <item name="android:textSize">@dimen/text_baro_size</item>
    </style>

    <style name="text_temp_unit" parent="text_unit">
        <item name="android:textSize">@dimen/text_temp_unit_size</item>
    </style>

    <style name="text_humi_unit" parent="text_unit">
        <item name="android:textSize">@dimen/text_humi_unit_size</item>
    </style>

    <style name="text_baro_unit" parent="text_unit">
        <item name="android:textSize">@dimen/text_baro_unit_size</item>
    </style>

</resources>

